@model ManageRoles.ViewModels.LoginViewModel
@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    #CaptchaInputText {
        text-transform: uppercase;
    }

    .login-form-title {
        font-family: Century Gothic;
        font-size: 18px;
        line-height: 1.2;
        text-align: center;
        display: block;
        margin-top: 25px;
    }

    .vcenter {
        display: inline-block;
        vertical-align: middle;
        float: none;
        line-height: 50px;
        padding-left: 10px;
        font-family: Bold;
        font-size: 18px;
    }
</style>

<h1 align="right" , style="color:darkolivegreen; font-style:italic; font-family:Century Gothic; font-size:15px;">Email : marketing@traconindia.com</h1>

@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()
    <span class="login-form-title">
        <img alt="Web Studio" style="width:185px" class="img-fluid" src="~/Content/Image/Tracon Logo Main  Page.png" />
        Tracon Export Services Private Limited - Head Office: Mumbai, Factory : Karur, Showroom : Grurugram
    </span>
    
    <div class="login-panel">
        @*<div class="col-md-5">
                <img src="~/Content/Image/logo.png" alt="logo" class="img-responsive center-block" style="margin-top:80px"/>
            </div>*@
        <div class="col-md-12">
            @if (ViewBag.errormessage != null)
            {
                <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
            }
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    <div class="clearfix">
                        <div class="pull-left">
                            <img src="~/Content/Image/logo.png" alt="logo" class="img-responsive" style="width:50px" />
                        </div>
                        <div class="pull-left vcenter">
                            Tracon E.S.P.L - Login
                        </div>
                    </div>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    @Html.LabelFor(model => model.Username)
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @maxlength = 20, @autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @maxlength = 30, @autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-xs-12">
                    <div id="captcha" class="captcha">
                        @Html.Label("Captcha")
                        @Html.Captcha("Refresh", "Enter the text you see above", 5, "<span class='text-danger'>Enter Captcha</span>", true)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-0 col-md-10">
                    <input id="Submit1" class="btn btn-success" type="submit" value="Sign in To Account">
                </div>
            </div>
        </div>
    </div>
}

@using ManageRoles.Repository
@model List<ManageRoles.Models.VW_BuyerOrderDespatchList>
@{
    Layout = null;
}

<div class="table-responsive">
    <table id="tblQPKGKDL" class="main-grid table table-striped table-bordered table-hover1 tableFixHead">
        <thead>
            <tr class="header-title">
                <th class="action">Buyer Order Number</th>
                <th class="action">OPMKDList Date</th>
                <th class="action">BuyerKDList Date</th>
                <th class="action">Remaining Days For KD - OPM</th>
                <th class="action">Remaining Days For KD - BYR</th>
                <th class="action">Today Date</th>
            </tr>
        </thead>
        @if (Model != null && Model.Count() > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.BuyerOrderName</td>
                    <td>@(item.OPMKDListDate != null ? Convert.ToDateTime(item.OPMKDListDate).ToString("dd-MMM-yy"):"") </td>                   
                    <td>@(item.BuyerKDListDate != null ? Convert.ToDateTime(item.BuyerKDListDate).ToString("dd-MMM-yy") : "")</td>
                    <td>@item.RemainingDays</td>
                    <td>@item.BuyerRemainingDays</td>
                    <td>@(item.TodayDate != null ? Convert.ToDateTime(item.TodayDate).ToString("dd-MMM-yy") : "")</td>
                </tr>
                }
            </tbody>
        }
        else
        {
            <tbody>
                <tr>
                    <td colspan="4">
                        No data
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>


